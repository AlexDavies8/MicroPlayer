<Page x:Class="MicroPlayer.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MicroPlayer"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="SettingsPage">

    <Grid>
        <StackPanel Margin="25">
            <ComboBox SelectionChanged="ThemeChanged" Width="250" Height="30" Style="{DynamicResource FlatComboBox}" FontSize="16" Foreground="{DynamicResource FontBrush}"  ClipToBounds="False">
                <ComboBoxItem IsSelected="True">Light</ComboBoxItem>
                <ComboBoxItem>Dark Accent</ComboBoxItem>
                <ComboBoxItem>Nior</ComboBoxItem>
                <ComboBoxItem>Night</ComboBoxItem>
                <ComboBoxItem>Embers</ComboBoxItem>
                <ComboBoxItem>Seaboard</ComboBoxItem>
            </ComboBox>
        </StackPanel>
    </Grid>
</Page>

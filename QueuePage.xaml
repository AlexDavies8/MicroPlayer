<Page x:Class="MicroPlayer.QueuePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MicroPlayer"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="QueuePage">

    <Grid>
        <local:CustomScrollViewer VerticalScrollBarVisibility="Hidden" Margin="10, 60, 10, 10" ClipToBounds="True" SpeedFactor="0.1">
            <StackPanel Name="Container">
            </StackPanel>
        </local:CustomScrollViewer>
        <Button FontFamily="Segoe MDL2 Assets" Content="&#xE823;" BorderThickness="0" FontSize="24" Background="{DynamicResource ForegroundBrush}" Foreground="{DynamicResource FontBrush}" Margin="10,10,180,250" Name="QueueButton" Click="ShowQueue"/>
        <Button FontFamily="Segoe MDL2 Assets" Content="&#xE81C;" BorderThickness="0" FontSize="24" Background="{DynamicResource ForegroundBrush}" Foreground="{DynamicResource FontBrush}" Margin="130,10,60,250" Name="HistoryButton" Click="ShowHistory"/>
        <Button FontFamily="Segoe MDL2 Assets" Content="&#xE8E5;" BorderThickness="0" FontSize="24" Background="{DynamicResource ForegroundBrush}" Foreground="{DynamicResource FontBrush}" Margin="250,10,10,250" Name="AddButton" Click="LoadTrack"/>
    </Grid>
</Page>

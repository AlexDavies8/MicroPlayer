<Page x:Class="MicroPlayer.QueuePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MicroPlayer"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="QueuePage">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Hidden" Margin="10, 60, 10, 10" ClipToBounds="True">
            <StackPanel Name="Container" Margin="0, -10, 0, -10">
            </StackPanel>
        </ScrollViewer>
        <Label Name="EmptyLabel" FontSize="30" Foreground="{DynamicResource FontBrush}" HorizontalAlignment="Center" VerticalAlignment="Center">Queue Empty</Label>
        <Button FontFamily="Segoe MDL2 Assets" Content="&#xE823;" BorderThickness="0" FontSize="24" Background="{DynamicResource ForegroundBrush}" Foreground="{DynamicResource FontBrush}" Margin="10,10,155,250" Name="QueueButton" Click="ShowQueue"/>
        <Button FontFamily="Segoe MDL2 Assets" Content="&#xE81C;" BorderThickness="0" FontSize="24" Background="{DynamicResource ForegroundBrush}" Foreground="{DynamicResource FontBrush}" Margin="155,10,10,250" Name="HistoryButton" Click="ShowHistory"/>
    </Grid>
</Page>
